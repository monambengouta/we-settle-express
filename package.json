{
	"name": "we-settle-backend",
	"version": "1.0.14",
	"description": "An Express backend for we settle app",
	"author": "Monam Ben Gouta",
	"repository": "monam_bengouta/we-settle-express",
	"license": "MIT",
	"main": "index.ts",
	"private": true,
	"scripts": {
		"build": "tsup",
		"start:dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
		"start:prod": "node dist/index.js",
		"lint": "biome lint",
		"lint:fix": "biome lint --fix",
		"format": "biome format --write",
		"test": "vitest run",
		"test:cov": "vitest run --coverage",
		"check": "pnpm lint && pnpm format && pnpm build && pnpm test",
		"migrate": "npx sequelize-cli db:migrate",
		"migrate:undo": "npx sequelize-cli db:migrate:undo:all",
		"migrate:create": "npx sequelize-cli migration:generate --name",
		"seed": "npx sequelize-cli db:seed:all",
		"seed:undo": "npx sequelize-cli db:seed:undo:all"
	},
	"dependencies": {
		"@asteasolutions/zod-to-openapi": "7.3.0",
		"@sequelize/core": "7.0.0-alpha.46",
		"@sequelize/postgres": "7.0.0-alpha.46",
		"add": "^2.0.6",
		"cors": "2.8.5",
		"dotenv": "16.5.0",
		"envalid": "8.0.0",
		"express": "4.21.2",
		"express-rate-limit": "7.5.0",
		"helmet": "8.1.0",
		"http-status-codes": "2.3.0",
		"jsonwebtoken": "^9.0.2",
		"nodemailer": "^6.10.1",
		"pg": "^8.15.0",
		"pg-hstore": "^2.3.4",
		"pino": "9.6.0",
		"pino-http": "10.4.0",
		"pnpm": "^10.9.0",
		"sequelize": "^6.37.7",
		"swagger-ui-express": "5.0.1",
		"zod": "3.24.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/cors": "2.8.17",
		"@types/express": "5.0.1",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/nodemailer": "^6.4.17",
		"@types/supertest": "6.0.3",
		"@types/swagger-ui-express": "4.1.8",
		"@vitest/coverage-v8": "3.1.1",
		"pino-pretty": "13.0.0",
		"sequelize-cli": "^6.6.2",
		"supertest": "7.1.0",
		"tsup": "8.4.0",
		"tsx": "4.19.3",
		"typescript": "5.8.3",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.1.1"
	},
	"tsup": {
		"entry": [
			"src",
			"!src/**/__tests__/**",
			"!src/**/*.test.*"
		],
		"splitting": false,
		"sourcemap": true,
		"clean": true
	},
	"packageManager": "pnpm@10.8.1"
}